{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "globals": {
    "idb": "readonly",
    "Fuse": "readonly",
    "Sortable": "readonly",
    "mammoth": "readonly",
    "Tesseract": "readonly"
  },
  "ignorePatterns": [
    "lib/**",
    "assets/**",
    "**/*.min.js"
  ],
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-undef": "error",
    "no-console": ["off"],
    "import/no-unresolved": "off",
    "import/no-absolute-path": "off"
  }
}

